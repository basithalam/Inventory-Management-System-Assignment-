@model Mini_Inventory_Management_System.Models.Product

@{
    // Set the page title for the browser/tab
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Bootstrap card for the create product form -->
            <div class="card shadow-lg border-0">
                <!-- Card header with title and back button -->
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-box-open me-2"></i>
                        Create Product
                    </h4>
                    <!-- Back to inventory list -->
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fa fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    <!-- Product creation form with floating labels and icons -->
                    <form asp-action="Create" method="post" autocomplete="off" novalidate>
                        <!-- Product Name input with floating label and icon -->
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Name" class="form-control ps-5" placeholder="Product Name" />
                            <label asp-for="Name"><i class="fa fa-tag me-2 text-secondary"></i> Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <!-- Product Category input with floating label and icon -->
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Category" class="form-control ps-5" placeholder="Category" />
                            <label asp-for="Category"><i class="fa fa-list me-2 text-secondary"></i> Category</label>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>
                        <!-- Product Price input with floating label and icon -->
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Price" class="form-control ps-5" placeholder="Price" type="number" min="0" step="0.01" />
                            <label asp-for="Price"><i class="fa fa-dollar-sign me-2 text-secondary"></i> Price</label>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <!-- Product Quantity input with floating label and icon -->
                        <div class="form-floating mb-4 position-relative">
                            <input asp-for="Quantity" class="form-control ps-5" placeholder="Quantity" type="number" min="0" />
                            <label asp-for="Quantity"><i class="fa fa-boxes-stacked me-2 text-secondary"></i> Quantity</label>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                        <!-- Submit button with icon -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fa fa-save me-1"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add focus effect to form controls for better UX
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', () => input.classList.add('border-primary', 'shadow'));
            input.addEventListener('blur', () => input.classList.remove('border-primary', 'shadow'));
        });

        // Highlight invalid fields on submit
        document.querySelector('form').addEventListener('submit', function (e) {
            this.querySelectorAll('.form-control').forEach(input => {
                if (!input.checkValidity()) {
                    input.classList.add('is-invalid');
                } else {
                    input.classList.remove('is-invalid');
                }
            });
        });
    </script>
}
